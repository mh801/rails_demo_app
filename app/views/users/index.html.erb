<h1>Listing Current Users</h1>

<table>
	<thead>
  		<tr>
    		<th>First name</th>
    		<th>Last name</th>
    		<th>Email</th>
    		<th>City</th>
    		<th>State</th>
    		<th>Zip code</th>
    		<th colspan="4" class="actions">Actions</th>
  		</tr>
	</thead>			
	<tbody>
		<% @users.each do |user| %>
  			<tr>
    			<td><%= user.first_name %></td>
    			<td><%= user.last_name %></td>
    			<td><%= user.email %></td>
    			<td><%= user.city %></td>
    			<td><%= user.state %></td>
    			<td><%= user.zip_code %></td>
				<td class="actions"><%= link_to 'Follow', edit_user_path(user) %></td>
    			<td class="actions"><%= link_to 'Show', user %></td>
    			<td class="actions"><%= link_to 'Edit', edit_user_path(user) %></td>
    			<td class="actions"><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  			</tr>
<% end %>
	</tbody>
</table>
<br />

<%= link_to 'New User', new_user_path %>
	